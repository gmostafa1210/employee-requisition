<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_requisition_custom_tree" model="ir.ui.view">
        <field name="name">employee.requisition.form</field>
        <field name="model">employee.requisition</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="requisition_state"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_requisition_custom_form" model="ir.ui.view">
        <field name="name">employee.requisition.form</field>
        <field name="model">employee.requisition</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button id='button_requisition' name='action_requisition' string='Requisition' type='object' class='btn-primary' groups='employee_requisition.employee_requisition_user_access_employee'/>
                    <button id='button_approved' name='action_approved' string='Approved' type='object' class='btn-primary' groups='employee_requisition.employee_requisition_user_access_hr'/>
                    <button id='button_confirmed' name='action_confirmed' string='Confirmed' type='object' class='btn-primary' groups='employee_requisition.employee_requisition_user_access_admin'/>
                    <button id='button_cancelled' name='action_cancelled' string='Cancelled' type='object' groups='employee_requisition.employee_requisition_user_access_hr'/>

                    <field name='state' widget='statusbar' statusbar_visible='draft,requisition,approved,confirmed'/>
                </header>
                <sheet>
                    <group>
                        <field name="name" required="True"/>
                        <field name="date" required="True"/>
                    </group>
                    <notebook>
                        <page string='Product Requisition'>
                            <field name="requisition_line">
                                <tree editable='bottom'>
                                    <field name="product_id" required="True"/>
                                    <field name="product_qty" required="True"/>
                                    <field name="requisition_id" invisible='1'/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                        </group>
                                        <group>
                                            <field name="product_qty"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_employee_requisition_custom" model="ir.actions.act_window">
        <field name="name">Requisition</field>
        <field name="res_model">employee.requisition</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem 
            id="menu_employee_requisition_custom" 
            action="action_employee_requisition_custom" 
            name="Employee Requisition"/>

</odoo>